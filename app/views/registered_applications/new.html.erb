<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.application_register', default: 'Register Application') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for @registered_application do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control' %>
      </div>
      <%= f.submit t('.application_create', default: 'Register application'), class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
